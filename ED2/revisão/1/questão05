#include <stdio.h>

int main(void) {
  float n[2];

  while(n[0] != 50) {
    printf("\ninforme a primeira nota do aluno:\t");
    scanf("%f", &n[0]);
    printf("informe a segunda nota do aluno:\t");
    scanf("%f", &n[1]);
    printf("notas = [%.2f, %.2f], media = %.2f", n[0], n[1], (n[0]+n[1])/2);
  }

  return 0;
}
