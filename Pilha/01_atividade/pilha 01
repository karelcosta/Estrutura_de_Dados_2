#include <stdio.h>
#include <stdlib.h>

struct historico{
 char adress[30];
 struct historico *prox;
}typedef Historico;
Historico *topo;

void add(){
  Historico *site = malloc(sizeof(Historico));
  printf("Infome o site:\t");
  scanf("%s", site->adress);
  site->prox = topo;
  topo = site;
}

void voltar(){
  topo = topo->prox;
}

void visualizar(){
  printf("%s", topo->adress);
}

void separador(){
  printf("\n-------------------------\n");
}

int main(void) {
  int off=0, op = 0, MAX = 0;
  char aux = 's';

  do {  
    printf("\t\tMENU");
    separador();
    printf("1_acessar site\n");
    printf("2_visualizar site\n");
    printf("3_voltar\n");
    printf("4_fechar");
    separador();
    printf("Opção: ");
    scanf("%d", &op);

    switch (op){
      case 1:
      if(MAX <= 10){
        separador();
        add(); 
        ++MAX;
        separador();
      } else {
        separador();
        printf("quantidade maxima atingida");
        separador();
      }
      break;

      case 2:
      separador();
      visualizar();
      separador();
      break;

      case 3:
      separador();
      voltar();
      --MAX;
      separador();
      break;

      case 4:
      separador();
      printf("Fechando . . . ");
      off = 1;
      break;

      default:
      break;
    }

  } while(off != 1);
  
  return 0;
}
