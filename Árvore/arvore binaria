#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct elemento{
  int valor;
  struct elemento *esq;
  struct elemento *dir;
}typedef Nodo;

Nodo *raiz;

void add(){
  Nodo *nodo = malloc(sizeof(Nodo));
  printf("Informe o valor:");
  scanf("%d", &nodo->valor);
  if(raiz == NULL){
    raiz = nodo;
  } else {
    Nodo *aux = raiz;
    while (aux != NULL){
      if(nodo->valor > aux->valor){
        aux = aux->dir;
      }
      if(nodo->valor <= aux->valor){
        aux = aux->esq;
      }
    }
    aux = nodo;
  } 
}

void separador(){
  printf("\n------------------------\n");
}

void visualisar(Nodo *nodo, char aux){
  if(nodo != NULL){
    printf("\nValor = %d\ndireito ou esquerda?[d/e]", nodo->valor);
    scanf("%c", &aux);
    if(aux == 'd'){
    visualisar(nodo->dir, aux);
    } else if(aux == 'e'){
    visualisar(nodo->esq, aux);
    }
  }
}

int main(void) {
  char aux = 'd';
  separador();
  add();
  separador();
  add();
  visualisar(raiz, aux);
  return 0;
}
